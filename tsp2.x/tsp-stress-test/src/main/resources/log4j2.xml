<?xml version="1.0" encoding="UTF-8"?>
<!--设置log4j2的自身log级别为warn-->
<configuration status="warn">

    <appenders>
        <console name="Console" target="SYSTEM_OUT">
            <PatternLayout charset="UTF-8" pattern="[%d{HH:mm:ss:SSS}] [%p] - %l - %m%n"/>
        </console>
        
        <RollingFile name="RollingFileALL" fileName="/opt/log/stress/all.log"
                     filePattern="/opt/log/stress/all-%d{yyyy-MM-dd}-%i.log">
            <ThresholdFilter level="DEBUG"/>
            <PatternLayout charset="UTF-8" pattern="[%d{HH:mm:ss:SSS}] [%p] - %l - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>
        
        <RollingFile name="RollingFileError" fileName="/opt/log/stress/error.log"
                     filePattern="/opt/log/stress/$${date:yyyy-MM}/error-%d{yyyy-MM-dd}-%i.log">
            <ThresholdFilter level="ERROR"/>
            <!--  <PatternLayout charset="UTF-8" pattern="[%d{HH:mm:ss:SSS}] [%p] - %l - %m%n"/> -->
           <JsonLayout locationInfo="true" complete="false" />
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>
        
    </appenders>

    <loggers>
        <logger name="org.eclipse.paho.client.mqttv3.internal" level="error"/>
        <root level="info">
            <appender-ref ref="Console"/>
            <appender-ref ref="RollingFileALL"/>
            <appender-ref ref="RollingFileError"/>
        </root>
    </loggers>

</configuration>