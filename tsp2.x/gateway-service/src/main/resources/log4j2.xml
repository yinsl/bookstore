<?xml version="1.0" encoding="UTF-8"?>
<!--设置log4j2的自身log级别为warn-->
<configuration status="warn">

    <appenders>
        <console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss:SSS}] [%p] -%c - %L - %m%n" charset="UTF-8"/>
        </console>

		<RollingFile name="RollingFileDebug" fileName="/opt/log/gateway-mqtt/debug.log"
                     filePattern="/opt/log/gateway-mqtt/debug-%d{yyyy-MM-dd}-%i.log">
            <Filters>
                <ThresholdFilter level="DEBUG"/>
                <ThresholdFilter level="INFO" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
            <PatternLayout pattern="[%d{HH:mm:ss:SSS}] [%p] -%c - %L - %m%n" charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>
        
        <RollingFile name="RollingFileInfo" fileName="/opt/log/gateway-mqtt/info.log"
                     filePattern="/opt/log/gateway-mqtt/info-%d{yyyy-MM-dd}-%i.log">
            <Filters>
                <ThresholdFilter level="INFO"/>
                <ThresholdFilter level="WARN" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
            <PatternLayout pattern="[%d{HH:mm:ss:SSS}] [%p] -%c - %L - %m%n" charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>

        <RollingFile name="RollingFileWarn" fileName="/opt/log/gateway-mqtt/warn.log"
                     filePattern="/opt/log/gateway-mqtt/warn-%d{yyyy-MM-dd}-%i.log">
            <Filters>
                <ThresholdFilter level="WARN"/>
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
            <PatternLayout pattern="[%d{HH:mm:ss:SSS}] [%p] -%c - %L - %m%n" charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>

        <RollingFile name="RollingFileError" fileName="/opt/log/gateway-mqtt/error.log"
                     filePattern="/opt/log/gateway-mqtt/error-%d{yyyy-MM-dd}-%i.log">
            <ThresholdFilter level="ERROR"/>
            <PatternLayout pattern="[%d{HH:mm:ss:SSS}] [%p] -%c - %L - %m%n" charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>
        
        <RollingFile name="RollingFileALL" fileName="/opt/log/gateway-mqtt/all.log"
                     filePattern="/opt/log/gateway-mqtt/all-%d{yyyy-MM-dd}-%i.log">
            <ThresholdFilter level="DEBUG"/>
            <PatternLayout pattern="[%d{HH:mm:ss:SSS}] [%p] -%c - %L - %m%n" charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>

    </appenders>

    <loggers>
        <!--过滤掉spring和hibernate的一些无用的debug信息-->
        <logger name="org.springframework" level="INFO"/>
        <logger name="org.hibernate" level="INFO"/>
        <logger name="com.netflix" level="WARN"/>
        <logger name="io.netty" level="INFO"/>
        <logger name="io.lettuce" level="WARN"/>
        <logger name="org.apache" level="INFO"/>
        <logger name="org.apache.kafka.clients.consumer" level="WARN"/>
        <logger name="org.springframework.kafka.listener" level="WARN"/>
        <root level="debug">
            <appender-ref ref="Console"/>
            <appender-ref ref="RollingFileALL"/>
        </root>
    </loggers>

</configuration>